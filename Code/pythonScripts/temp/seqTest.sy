(synth-fun addOneAtEach ((s (Seq Int))) (Seq Int))

(constraint (forall ((index Int) (a (Seq Int)) (b (Seq Int))) (=>
    (and
        (< index (seq.len a))
        (>= index 0)
        (= b (addOneAtEach a))
    )
    (and
        (= (seq.len a) (seq.len b))
        (= (seq.nth b index) (+ 1 (seq.nth a index)))
    )
)))


